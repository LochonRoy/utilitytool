<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D2F8D3"
    tools:context=".Activity4">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:gravity="center"
       android:weightSum="7"
       android:orientation="vertical">
       <TextView
           android:id="@+id/question1"
           android:layout_weight="1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Question 1:"
           android:textStyle="bold"
           android:textColor="#F44336"
           android:textSize="18sp" />

       <RadioGroup
           android:id="@+id/radioGroup1"
           android:layout_weight="2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <RadioButton
               android:id="@+id/q1Option1"
               android:textSize="20sp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Option 1" />

           <RadioButton
               android:id="@+id/q1Option2"
               android:textSize="20sp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Option 2" />

           <RadioButton
               android:id="@+id/q1Option3"
               android:textSize="20sp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Option 3" />

           <RadioButton
               android:id="@+id/q1Option4"
               android:textSize="20sp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Option 4" />

       </RadioGroup>

       <TextView
           android:id="@+id/question2"
           android:layout_weight="1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textColor="#F44336"
           android:text="Question 2:"
           android:textStyle="bold"
           android:textSize="18sp" />

       <RadioGroup
           android:id="@+id/radioGroup2"
           android:layout_weight="2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <RadioButton
               android:id="@+id/q2Option1"
               android:textSize="20sp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Option 1" />

           <RadioButton
               android:id="@+id/q2Option2"
               android:textSize="20sp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Option 2" />

           <RadioButton
               android:id="@+id/q2Option3"
               android:textSize="20sp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Option 3" />

           <RadioButton
               android:id="@+id/q2Option4"
               android:textSize="20sp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Option 4" />

       </RadioGroup>

       <Button
           android:id="@+id/nextButton"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Next"
           android:layout_weight="1"
           android:background="#CDDA49"
           android:layout_gravity="end" />





   </LinearLayout>




</LinearLayout>